@model IEnumerable<DepartmentDTO>
@{
    ViewData["Title"] = "Index";
}
<div class="card ">
    <div class="card-header border border-primary">
        <h1 class="my-3">All Departments</h1>
    </div>
    @if (TempData["Message"] != null)
    {
      <div class="alert alert-info mt-4 w-50 m-auto">
        <h6 class="text-center">@TempData["Message"]</h6>
      </div>
    }
    
    <div class="card-body">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i>Add New Department</a>

        }
        @if (Model.Any())
        {
            <table class="table table-striped table-hover mt-2">
                <thead class="text-center">
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Details</th>
                        @if (User.IsInRole("Admin"))
                        {
                            <th>Update</th>
                            <th>Delete</th>
                        }
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var dept in Model)
                    {
                        <tr>
                            <td>@dept.Code</td>
                            <td>@dept.Name</td>
                            <td>@dept.Description</td>

                            <partial name="PartialViews/_Buttons" model="@dept.Id"/>
                            @if (User.IsInRole("Admin"))
                            {
                                <td>
                                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteDepartment">
                                        <i class="fas fa-trash"></i>Delete
                                    </button>
                                </td>
                            }
                            
                        </tr>
                        <div class="modal fade" id="DeleteDepartment" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Confirmation</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body text-center">
                                        <p>Are You Sure You Want to Delete @dept.Name Department?</p>
                                    </div>
                                    <div class="modal-footer m-auto">
                                        <form asp-action="Delete" asp-route-id="@dept.Id" method="post">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="mt-4">
                                                <input type="submit"value="Delete" class="btn btn-danger"/>
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            </div>
                                        </form>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info mt-2">
                <h2>No Departments found!!</h2>
            </div>
        }
    </div>
</div>


